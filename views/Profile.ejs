<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile | QuicklyKit.com</title>
    <link rel="shortcut icon" href="/assets/logo.svg" type="image/x-icon" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100">
    <div class="flex h-screen">
      <!-- Sidebar -->
      <div
        class="w-[20%] md:w-[5%] bg-gray-800 text-white flex flex-col items-center fixed h-full"
      >
        <nav class="flex flex-col items-center justify-evenly h-full w-full">
          <a href="/Home" class="flex flex-col items-center group">
            <span
              class="material-icons text-3xl group-hover:scale-125 transition-transform"
              >home</span
            >
            <span class="text-xs mt-1 group-hover:text-gray-400">Home</span>
          </a>
          <a href="/Dashboard" class="flex flex-col items-center group">
            <span
              class="material-icons text-3xl group-hover:scale-125 transition-transform"
              >dashboard</span
            >
            <span class="text-xs mt-1 group-hover:text-gray-400"
              >Dashboard</span
            >
          </a>
          <a href="/Profile" class="flex flex-col items-center group border-2 p-1 rounded-lg">
            <span
              class="material-icons text-3xl group-hover:scale-125 transition-transform"
              >person</span
            >
            <span class="text-xs mt-1 group-hover:text-gray-400">Profile</span>
          </a>
          <a href="/Settings" class="flex flex-col items-center group">
            <span
              class="material-icons text-3xl group-hover:scale-125 transition-transform"
              >settings</span
            >
            <span class="text-xs mt-1 group-hover:text-gray-400">Settings</span>
          </a>
          <a href="#" class="flex flex-col items-center group" id="logout-btn">
            <span
              class="material-icons text-3xl group-hover:scale-125 transition-transform"
              >logout</span
            >
            <span class="text-xs mt-1 group-hover:text-gray-400">Logout</span>
          </a>
        </nav>
      </div>

      <!-- Main Content -->
      <div class="ml-[5%] md:ml-[5%] flex-1 p-6 overflow-y-auto">
        <!-- Profile Section -->
        <div class="bg-white shadow-lg rounded-lg p-6 mb-8">
          <h1 class="text-2xl font-bold text-gray-800 mb-4">User Profile</h1>
          <div class="flex flex-col md:flex-row gap-6">
            <!-- Profile Picture -->
            <div class="flex flex-col items-center">
              <div
                class="w-32 h-32 rounded-full bg-gray-300 flex items-center justify-center shadow-md"
              >
                <span class="material-icons text-6xl text-gray-500">person</span>
              </div>
            </div>

            <!-- User Details -->
            <div class="flex-1">
              <form>
                <div class="mb-4">
                  <label
                    for="username"
                    class="block text-gray-600 font-semibold mb-2"
                    >Username</label
                  >
                  <input
                    type="text"
                    id="username"
                    class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-500"
                    value="Aditya Singh"
                  />
                </div>
                <div class="mb-4">
                  <label
                    for="email"
                    class="block text-gray-600 font-semibold mb-2"
                    >Email</label
                  >
                  <input
                    type="email"
                    id="email"
                    class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-500"
                    value="adityasunilsingh1335@gmail.com"
                  />
                </div>
                <div class="mb-4">
                  <label
                    for="phone"
                    class="block text-gray-600 font-semibold mb-2"
                    >Phone Number</label
                  >
                  <input
                    type="tel"
                    id="phone"
                    class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-500"
                    value="+91 - 1234567890"
                  />
                </div>
                <button
                  type="submit"
                  class="bg-green-500 text-white px-6 py-2 rounded shadow hover:bg-green-600 transition"
                >
                  Save Changes
                </button>
              </form>
            </div>
          </div>
        </div>

        <!-- Feedback Form -->
        <div class="bg-white shadow-lg rounded-lg p-6">
          <h2 class="text-2xl font-bold text-gray-800 mb-4">User Feedback</h2>
          <form method="post" action="/api/post-feedback-data">
            <div class="mb-4">
              <label
                for="feedback"
                class="block text-gray-600 font-semibold mb-2"
                >Your Feedback</label
              >
              <textarea
                id="feedback"
                rows="4"
                name="review"
                class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-500"
                placeholder="Write your feedback here..."
              ></textarea>
            </div>
            <div class="mb-4">
              <label
                for="rating"
                class="block text-gray-600 font-semibold mb-2"
                >Rating</label
              >
              <select
                id="rating"
                name="rating"
                class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-500"
              >
                <option value="5">Excellent</option>
                <option value="4">Very Good</option>
                <option value="3">Good</option>
                <option value="2">Fair</option>
                <option value="1">Poor</option>
              </select>
            </div>
            <button
              type="submit"
              class="bg-green-500 text-white px-6 py-2 rounded shadow hover:bg-green-600 transition"
            >
              Submit Feedback
            </button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
