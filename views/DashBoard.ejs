<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard | QuicklyKit.com</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.birds.min.js"></script>
    <style>
      .card {
        background-color: rgba(85, 139, 47, 0.5); /* Nice shade of green with transparency */
        backdrop-filter: blur(5px);
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <div id="vanta-bg" class="flex h-screen">
      <!-- Sidebar -->
      <div
        class="w-[20%] md:w-[5%] bg-gray-800 text-white flex flex-col items-center fixed h-full"
      >
        <nav class="flex flex-col items-center justify-evenly h-full w-full">
          <a href="/Home" class="flex flex-col items-center group">
            <span
              class="material-icons text-3xl group-hover:scale-125 transition-transform"
              >home</span
            >
            <span class="text-xs mt-1 group-hover:text-gray-400">Home</span>
          </a>
          <a href="/Dashboard" class="flex flex-col items-center group">
            <span
              class="material-icons text-3xl group-hover:scale-125 transition-transform"
              >dashboard</span
            >
            <span class="text-xs mt-1 group-hover:text-gray-400"
              >Dashboard</span
            >
          </a>
          <a href="/Profile" class="flex flex-col items-center group">
            <span
              class="material-icons text-3xl group-hover:scale-125 transition-transform"
              >person</span
            >
            <span class="text-xs mt-1 group-hover:text-gray-400">Profile</span>
          </a>
          <a href="/Settings" class="flex flex-col items-center group">
            <span
              class="material-icons text-3xl group-hover:scale-125 transition-transform"
              >settings</span
            >
            <span class="text-xs mt-1 group-hover:text-gray-400">Settings</span>
          </a>
          <a href="#" class="flex flex-col items-center group" id="logout-btn">
            <span
              class="material-icons text-3xl group-hover:scale-125 transition-transform"
              >logout</span
            >
            <span class="text-xs mt-1 group-hover:text-gray-400">Logout</span>
          </a>
        </nav>
      </div>

      <!-- Main Content -->
      <div class="ml-[5%] md:ml-[5%] flex-1 p-8 overflow-y-auto">
        <!-- Page Header -->
        <div class="mb-8">
          <h1 class="text-xl font-semibold mb-4">Dashboard</h1>
          <div class="relative">
            <input
              type="text"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none"
              placeholder="Search tools..."
            />
            <span
              class="material-icons absolute top-1/2 transform -translate-y-1/2 right-4 text-gray-400 cursor-pointer"
              >search</span
            >
          </div>
        </div>

        <!-- Cards Section -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Tool Cards -->
          <a
            href="/Tool/QrCode"
            class="card shadow-lg rounded-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div class="flex flex-col items-center">
              <span class="material-icons text-5xl text-blue-500">qr_code</span>
              <h2 class="mt-4 text-lg font-semibold">QR Code Generator</h2>
            </div>
          </a>

          <a
            href="/Tool/TinyUrl"
            class="card shadow-lg rounded-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div class="flex flex-col items-center">
              <span class="material-icons text-5xl text-green-500">link</span>
              <h2 class="mt-4 text-lg font-semibold">URL Shortener</h2>
            </div>
          </a>

          <a
            href="/tools/color-picker"
            class="card shadow-lg rounded-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div class="flex flex-col items-center">
              <span class="material-icons text-5xl text-yellow-500">palette</span>
              <h2 class="mt-4 text-lg font-semibold">Color Picker</h2>
            </div>
          </a>

          <a
            href="/tools/ip-finder"
            class="card shadow-lg rounded-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div class="flex flex-col items-center">
              <span class="material-icons text-5xl text-teal-500">public</span>
              <h2 class="mt-4 text-lg font-semibold">IP Finder</h2>
            </div>
          </a>

          <a
            href="/tools/text-to-speech"
            class="card shadow-lg rounded-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div class="flex flex-col items-center">
              <span
                class="material-icons text-5xl text-blue-500"
                >record_voice_over</span
              >
              <h2 class="mt-4 text-lg font-semibold">Text to Speech</h2>
            </div>
          </a>

          <a
            href="/tools/speech-to-text"
            class="card shadow-lg rounded-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div class="flex flex-col items-center">
              <span
                class="material-icons text-5xl text-gray-500"
                >mic</span
              >
              <h2 class="mt-4 text-lg font-semibold">Speech to Text</h2>
            </div>
          </a>

          <a
            href="/tools/bmi-calculator"
            class="card shadow-lg rounded-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div class="flex flex-col items-center">
              <span class="material-icons text-5xl text-indigo-500">health_and_safety</span>
              <h2 class="mt-4 text-lg font-semibold">BMI Calculator</h2>
            </div>
          </a>

          <a
            href="/tools/pdf-tools"
            class="card shadow-lg rounded-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div class="flex flex-col items-center">
              <span class="material-icons text-5xl text-red-500">picture_as_pdf</span>
              <h2 class="mt-4 text-lg font-semibold">PDF Tools</h2>
            </div>
          </a>

          <a
            href="/tools/image-compressor"
            class="card shadow-lg rounded-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div class="flex flex-col items-center">
              <span class="material-icons text-5xl text-orange-500">photo</span>
              <h2 class="mt-4 text-lg font-semibold">Image Resizer</h2>
            </div>
          </a>

          <a
            href="/tools/currency-converter"
            class="card shadow-lg rounded-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div class="flex flex-col items-center">
              <span
                class="material-icons text-5xl text-purple-500"
                >currency_exchange</span
              >
              <h2 class="mt-4 text-lg font-semibold">Currency Converter</h2>
            </div>
          </a>

          <a
            href="/tools/mass-converter"
            class="card shadow-lg rounded-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div class="flex flex-col items-center">
              <span class="material-icons text-5xl text-teal-500">scale</span>
              <h2 class="mt-4 text-lg font-semibold">Mass Converter</h2>
            </div>
          </a>

          <a
            href="/tools/random-wheel"
            class="card shadow-lg rounded-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div class="flex flex-col items-center">
              <span
                class="material-icons text-5xl text-pink-500"
                >casino</span
              >
              <h2 class="mt-4 text-lg font-semibold">Random Wheel</h2>
            </div>
          </a>

        </div>
      </div>
    </div>

    <script>
      VANTA.BIRDS({
        el: "#vanta-bg", // Fixed reference to the element with the correct ID
        backgroundColor: 0xd5e8d5, // Background color
        color1: 0xff6600, // First bird color
        color2: 0x3333ff, // Second bird color
        birdSize: 1, // Bird size
        quantity: 3, // Number of birds
      });
    </script>
  </body>
</html>
